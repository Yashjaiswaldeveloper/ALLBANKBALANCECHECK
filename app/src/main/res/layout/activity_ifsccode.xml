<?xml version="1.0" encoding="utf-8"?>
<!--suppress AndroidUnknownAttribute -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IFSCcodeActivity"
    android:background="#7C51F4E7">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar3"
        android:layout_width="match_parent"
        android:background="@drawable/toolbg"
        android:layout_height="150dp"/>

    <ImageView
        android:id="@+id/arrowback_ifsc"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/ic_baseline_arrow_back_24" />

    <TextView
        android:id="@+id/ifsc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:text="IFSC Code"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/lian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ifsc"
        android:layout_marginTop="80dp"
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/button_searcbank"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginHorizontal="55dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_letsgo"
            android:text="Search by Bank"
            android:textColor="@color/white"
            android:padding="10dp"
            android:textSize="15dp"
            android:textAlignment="center"
            />

        <Button
            android:id="@+id/button_pincode"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginHorizontal="55dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_letsgo"
            android:text="Search by PIN Code"
            android:textColor="@color/white"
            android:padding="10dp"
            android:textSize="15dp"
            android:textAlignment="center"/>

        <Button
            android:id="@+id/button_serifsc"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginHorizontal="55dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_letsgo"
            android:text="Search by IFSC"
            android:textColor="@color/white"
            android:padding="10dp"
            android:textSize="15dp"
            android:textAlignment="center"/>

    </LinearLayout>


    <!--suppress AndroidUnknownAttribute -->

    <LinearLayout
        android:id="@+id/ad_banner"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" />

</RelativeLayout>