<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalculatorActivity"
    android:background="#7C32DFD1">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar3"
        android:layout_width="match_parent"
        android:background="@drawable/toolbg"
        android:layout_height="150dp"/>



    <ImageView
        android:id="@+id/arrowback_cal"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/ic_baseline_arrow_back_24" />

    <TextView
        android:id="@+id/Exchange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:text="Finance Calculator"
        android:textSize="20sp" />


    <Button
        android:id="@+id/gst_cal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/Exchange"
        android:layout_marginStart="50dp"
        android:layout_marginTop="83dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/button_letsgo"
        android:padding="10dp"
        android:text="GST CALCULATOR"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="15dp" />

    <Button
        android:id="@+id/emi_cal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/gst_cal"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/button_letsgo"
        android:text="EMI CALCULATOR"
        android:textColor="@color/white"
        android:padding="10dp"
        android:textSize="15dp"
        android:textAlignment="center"/>

    <RelativeLayout
        android:id="@+id/native_ads"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

    </RelativeLayout>







</RelativeLayout>